@model PaymentType
@{
    ViewData["Title"] = "UpdatePaymentType";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdatePaymentType" class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="PaymentTypeName">Oda Tipi Adı :</label>
        <input asp-for="PaymentTypeName" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>


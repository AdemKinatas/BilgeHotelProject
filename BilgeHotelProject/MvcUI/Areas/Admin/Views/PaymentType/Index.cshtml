@model List<PaymentType>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <div class="container mx-auto mt-2">
        <div class="row">
            <div class="col-md-12">
                <a asp-action="AddPaymentType" asp-controller="PaymentType" class="btn btn-sm btn-outline-dark my-2"> <i class="fas fa-plus-circle mr-2"></i> Ödeme Yöntemi Ekle</a>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Ödeme Yöntemi Adı</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PaymentTypeName</td>
                                <td>
                                    <a asp-action="UpdatePaymentType" asp-controller="PaymentType" asp-route-id="@item.ID" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle</a>
                                    <a asp-action="UpdatePaymentType" asp-controller="PaymentType" asp-route-id="@item.ID" class="btn btn-danger btn-sm" ><i class="far fa-edit mr-2"></i>Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Kayıtlı Ödeme Yöntemi Bulunamadı!
        </p>
        <a asp-action="AddPaymentType" asp-controller="PaymentType" class="btn btn-sm btn-info my-2">Oda Tipi Ekle</a>
    </div>
}




@model List<Guest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <div class="container mx-auto mt-2">
        <div class="row">
            <div class="col-md-12">
                <a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-sm btn-outline-dark my-2"> <i class="fas fa-plus-circle mr-2"></i>Misafir Ekle</a>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Oda No</th>
                            <th>Kimlik/Pasaport No</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th>Telefon</th>
                            <th>EMail</th>
                            <th>Adres</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @foreach (var room in ViewBag.Rooms as List<Room>)
                                {
                                    if (item.RoomId == room.ID)
                                    {
                                        <td>@room.RoomNumber</td>
                                    }
                                }
                                <td>@item.NationalIdentificationNumber</td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>
                                    <a asp-action="UpdateCustomer" asp-controller="Customer" asp-route-id="@item.ID" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle</a>
                                    <a asp-action="DeleteCustomer" asp-controller="Customer" asp-route-id="@item.ID" class="btn btn-danger btn-sm"><i class="far fa-edit mr-2"></i>Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center mt-4">
        <p class="lead">
            Kayıtlı Misafir Bulunamadı!
        </p>
        <a asp-action="AddCustomer" asp-controller="Customer" class="btn btn-sm btn-info my-2">Misafir Ekle</a>
    </div>
}


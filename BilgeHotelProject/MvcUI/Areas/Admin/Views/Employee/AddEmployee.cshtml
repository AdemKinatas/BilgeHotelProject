@model Employee

@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="NationalIdentificationNumber">Kimlik/Pasaport Numarası :</label>
        <input asp-for="NationalIdentificationNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Adı :</label>
        <input asp-for="FirstName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Soyadı :</label>
        <input asp-for="LastName" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DutyId">Görevi :</label>
        <select asp-for="DutyId" class="form-control" asp-items="ViewBag.Duties">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Telefonu :</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Adresi :</label>
        <input asp-for="Address" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HourlyWage">Günlük Ücreti :</label>
        <input asp-for="HourlyWage" type="number" step="0.01" placeholder="0.00" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

@model RoomStatus
@{
    ViewData["Title"] = "AddRoomStatus";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="RoomStatusName">Oda Durumu Adı :</label>
        <input asp-for="RoomStatusName" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

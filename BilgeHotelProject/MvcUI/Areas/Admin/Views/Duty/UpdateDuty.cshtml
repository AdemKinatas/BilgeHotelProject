@model Duty
@{
    ViewData["Title"] = "UpdateDuty";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateDuty" class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="DutyName">Görev Adı :</label>
        <input asp-for="DutyName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama :</label>
        <input asp-for="Description" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>




@model UserForRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


            <!-- ========================  Note block ======================== -->
            <form asp-action="Register" method="post" class="mt-5 mb-5 w-75 mx-auto p-3 shadow">
                <h4 class="text-center">Kayıt Ol</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group">
                    <label asp-for="@Model.UserName">Kullanıcı Adı:</label>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input asp-for="@Model.UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FirstName">Adınız :</label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName">Soyadınız :</label>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    <input asp-for="@Model.LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email :</label>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password">Parola :</label>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" asp-for="@Model.Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PasswordAgain">Parola Tekrar:</label>
                    <span asp-validation-for="@Model.PasswordAgain" class="text-danger"></span>
                    <input type="password" asp-for="@Model.PasswordAgain" class="form-control" />
                </div>

                <a asp-action="Index" asp-controller="Home" class="btn btn-danger btn-sm">Vazgeç</a>
                <button type="submit" class=" btn btn-info btn-sm">Kayıt Ol</button>
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary btn-sm">Zaten bir hesabınız var mı? Giriş Yap</a>
            </form>

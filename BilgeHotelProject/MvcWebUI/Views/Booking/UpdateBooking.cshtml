@model Booking 

@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section aria-label="home" class="mainbg-1" id="home">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <form asp-action="AddBooking" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger">

                        </div>
                        <div class="form-group">
                            <label asp-for="RoomId">Oda Seçiniz :</label>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.Rooms">
                                <option hidden value="-1">Seçiniz</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonName">Misafir Adı :</label>
                            <span asp-validation-for="PersonName" class="text-danger"></span>
                            <input asp-for="PersonName" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PersonLastName">Misafir Soyadı :</label>
                            <span asp-validation-for="PersonLastName" class="text-danger"></span>
                            <input asp-for="PersonLastName" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Misafir E-Mail :</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <input asp-for="Email" type="email" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber">Misafir Telefon No :</label>
                            <span asp-validation-for="PersonName" class="text-danger"></span>
                            <input asp-for="PhoneNumber" type="text" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BookingFrom">Rezervasyon Başlangıç Tarihi :</label>
                            <span asp-validation-for="BookingFrom" class="text-danger"></span>
                            <input asp-for="BookingFrom" type="date" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BookingTo">Rezervasyon Bitiş Tarihi :</label>
                            <span asp-validation-for="BookingTo" class="text-danger"></span>
                            <input asp-for="BookingTo" type="date" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="NoOfGuests">Misafir Sayısı :</label>
                            <span asp-validation-for="NoOfGuests" class="text-danger"></span>
                            <input asp-for="NoOfGuests" type="number" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="BookingPackageId">Konaklama Paketi Seçiniz :</label>
                            <span asp-validation-for="BookingPackage" class="text-danger"></span>
                            <select asp-for="BookingPackageId" class="form-control" asp-items="ViewBag.BookingPackages">
                                <option hidden value="-1">Seçiniz</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-info btn-sm"><i class="fa fa-check mr-2"></i>Kaydet</button>
                    </form>
                </div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-danger text-center new-account">Vazgeç</a>
            </div>
        </div>
    </div>
</section>


@model Worker

@{
    ViewData["Title"] = "AddWorker";
    Layout = "~/Areas/HumanResources/Views/Shared/_HumanResourcesLayout.cshtml";
}


<form asp-action="AddWorker" class="w-75 mx-auto p-3" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="form-group">
        <label asp-for="NationalIdentificationNumber">Kimlik No :</label>
        <span asp-validation-for="NationalIdentificationNumber" class="text-danger"></span>
        <input asp-for="NationalIdentificationNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">Adı :</label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <input asp-for="FirstName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Soyadı :</label>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <input asp-for="LastName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon No :</label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address">Adresi :</label>
        <span asp-validation-for="Address" class="text-danger"></span>
        <input asp-for="Address" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DutyId">Görevi :</label>
        <span asp-validation-for="DutyId" class="text-danger"></span>
        <select asp-for="DutyId" class="form-control" asp-items="ViewBag.Duties">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

@model RoomType
@{
    ViewData["Title"] = "AddRoomType";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="form-group">
        <label asp-for="RoomTypeName">Oda Tipi Adı :</label>
        <span asp-validation-for="RoomTypeName" class="text-danger"></span>
        <input asp-for="RoomTypeName" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BasePrice">Günlük Konaklama Ücreti :</label>
        <span asp-validation-for="BasePrice" class="text-danger"></span>
        <input asp-for="BasePrice" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label>Oda Tipi Fotoğrafları :</label>
        <input multiple type="file" name="files" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
</form>

